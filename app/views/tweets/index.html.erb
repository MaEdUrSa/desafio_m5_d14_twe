<p style="color: green"><%= notice %></p>

<% content_for :title, "Tweets" %>

<h1 class="my-5 text-center">Tweets</h1>


<table class="table table-striped mb-5">

  <thead>
    <tr>
      <th>ID</th>
      <th>Description</th>
      <th>UserName</th>
      <th>Acciones</th>
    </tr>
  </thead>

    <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
              <td><%= tweet.id %></td>
              <td><%= tweet.description %></td>
               <td><%= tweet.username %></td>
               <td class="d-flex justify-content-between">
                  <%= link_to "Ver", tweet, class: "btn btn-sm btn-secondary"  %> 
                  <%= link_to "Editar", edit_tweet_path(tweet), class: "btn btn-sm btn-secondary"  %> 
                  <%= button_to "Eliminar", tweet, method: :delete,  class: "btn btn-sm btn-secondary"  %> 
               </td>
          </tr>
        <% end %>
    </tbody>
</table>



