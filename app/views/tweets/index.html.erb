<p style="color: green"><%= notice %></p>

<% content_for :title, "Tweets" %>

<div class="my-2 col-12">
    <%= form_with url: tweets_path, method: :get do |form| %>
    <%= form.text_field :query_text, placeholder: "Buscador", value: params[:query_text]%>

     <%= form.submit "buscar" %>
      <%end%>

    <div class="d-flex justify-content-end">
        <%== pagy_bootstrap_nav(@pagy)%>
      </div>
</div>
<table class="table table-striped mb-5">

  <thead>
    <tr>
      <th>ID</th>
      <th>Description</th>
      <th>UserName</th>
      <th>Acciones</th>
    </tr>
  </thead>

    <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
              <td><%= tweet.id %></td>
              <td><%= tweet.description %></td>
               <td><%= tweet.username %></td>
               <td class="d-flex justify-content-between">
                  <%= link_to "Ver", tweet, class: "btn btn-sm btn-secondary"  %> 
                  <%= link_to "Editar", edit_tweet_path(tweet), class: "btn btn-sm btn-secondary"  %> 
                  <%= button_to "Eliminar", tweet, method: :delete,  class: "btn btn-sm btn-secondary"  %> 
               </td>
          </tr>
        <% end %>
    </tbody>
</table>



